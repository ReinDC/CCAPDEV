<link rel="stylesheet" href="/css/register.css">
<link href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;700&display=swap" rel="stylesheet">

<body>
    <div class="body">
        <div class="content-container">
            <div class="image-box">
                <img src="https://cdn.pixabay.com/photo/2020/08/27/07/31/restaurant-5521372_1280.jpg">
            </div>

            <div class="form-box">
                <div class="form-head">
                    <h1>Yapper Elite</h1>
                </div>

                <div class="form-enter">
                    <form method="post" id="registerform" name="registerform">
                        <label for="prof-pic">Upload Profile (Link):</label>
                        <input type="text" name="prof-pic" id="profile">
                        <label for="username">Username:</label>
                        <input type="text" name="user-name" id="username">
                        <label for="password">Password:</label>
                        <input type="password" name="user-pass" id="password">
                        <label for="password-re">Re-enter Password:</label>
                        <input type="password" name="user-passre" id="password-re">
                        <label for="description">Short Description:</label>
                        <input type="text" name="user-desc" id="desc">

                        <div class="button-container">
                            <input type="submit" value="Submit">
                        </div>
                    </form>
                </div>

                <div class="sign-link">
                    <strong><a href="/login">Already have an account? Log in now!</strong>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <script src="/js/register.js"></script>
</body>
